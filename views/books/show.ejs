<%- include ("../partials/header") %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead"> Maine Bookshop </p>
      <div class="list-group">
        <li class="list-group-item active">  Item 1 </li>
        <li class="list-group-item">  Item 2 </li>
        <li class="list-group-item">  Item 1 </li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbail">
        <img class="img-responsive" src="<%= book.image %>"> </img>
        <div class="caption-full">
          <div class="pull-right">$9.00</div>
          <h4><a href="#"><%= book.title %></a></h4>
          <p><%= book.description %></p>
        </div>
        <div class="well">
          <div class="text-right"><a class="btn btn-success" href="/books/<%= book.id %>/comments/new"> Add comment </a>
          </div>
          <hr>
          <% comments.forEach(function(comment){ %>
              <div class="row">
                <div class="col-md-12">
                  <strong> <%= comment.author %> </strong>
                  <span class="pull-right">10 days ago</span>
                  <p>
                      <%= comment.text %>
                  </p>
                </div>
          <% })%>
        </div>
      </div>
    </div>
  </div>
</div>












