<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Book</h1>
    <div class="col-6 offset-3"></div>
    <form action="/books/<%= book.id %>?_method=PUT" method="POST">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="book[title]" value="<%=book.title %>">
        </div>
        <div class="mb-3">
            <label class="form-label" for="publisher">Publisher</label>
            <input class="form-control" type="text" id="publisher" name="book[publisher]" value="<%=book.publisher %>">
        </div>
        <div class="mb-3">
            <label class="form-label" for="image">Image Url</label>
            <input class="form-control" type="text" id="image" name="book[image]" value="<%=book.image %>">
        </div>
        <div class="mb-3">
            <div class="input-group">
                <label class="form-label" for="price">Book Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">â‚¬</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="book[price]" value="<%=book.price %>">
                </div>
            </div>
        </div>
        <div class=" mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" type="text" id="description"
                name="book[description]"><%=book.description %></textarea>
        </div>
        <div class="mb-3">
            <button class="btn btn-info"> Update Book</button>
        </div>
    </form>
    <a href="/books/<%= book.id %>"> Back to book </a>
</div>