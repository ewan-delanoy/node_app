<%- include ("../partials/header") %>

<div class="container">
  <div class="row">
      <h1 style="text-align:center;"> Add new comment to "<%= book.title %>" </h1>
      <div style="width: 30%, margin:25px auto;">
        <form action="/books/<%= book.id %>/comments" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="comment[text]"  placeholder="Put text here">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="comment[author]" placeholder="Put author here">
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block"> Submit</button>
          </div>
        </form>
        <a href="/books"> Go back</a>
      </div>
  </div>
</div>
<%- include ("../partials/footer") %>
